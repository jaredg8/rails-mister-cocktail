<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to 'Delete', dose_path(dose), method: :delete %></li>
        <% end %>
      </ul>
      <div>
        <%= cl_image_tag @cocktail.photo,
        width: 200, height: 100, crop: :limit %>
      </div>
      <br>
      <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
      <br>

      <%= link_to 'Back', cocktails_path %>

    </div>

  </div>
</div>
