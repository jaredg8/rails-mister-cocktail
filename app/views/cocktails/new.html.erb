<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1>New Cocktail</h1>
      <%= render 'form' %>
      <%= simple_form_for [@cocktail] do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "add a new cocktail", class: "btn btn-primary" %>
      <% end %>
      <%= link_to 'Back', cocktails_path %>
    </div>
    <%= cl_image_tag("tlxs4qbrwia1s2rht8d2",
    width: 400, height: 300, crop: :fill) %>
  </div>
</div>



